%h3
  Login
%div
  = error_messages_for session.authentication
  - @login_param = Merb::Authentication::Strategies::Basic::Base.login_param
  - @password_param = Merb::Authentication::Strategies::Basic::Base.password_param
  %form{ :action => slice_url(:merb_auth_slice_password, :perform_login), :method => "POST", "accept-charset" => "utf-8" }
    %input{ :name => "_method", :type => "hidden", :value => "PUT" }
    .formRow
      %label
        = @login_param.to_s.capitalize
        \:
        %input{ :name => @login_param.to_s, :type => "text", :id => @login_param.to_s, :value => "" }
    .formRow
      %label
        = @password_param.to_s.capitalize
        \:
        %input{ :name => @password_param.to_s, :type => "password", :id => @password_param.to_s, :value => "" }
    .formRow
      %input#Submit{ :name => "Submit", :type => "submit", :value => "Log In" }
  
  = link_to 'Forgotten password', url(:controller => :reset_password)


