- if current_user.has_permission(:vote)
  - if proposal.vote_by(current_user)
    %p
      You voted to
      %strong
        = proposal.vote_by(current_user).for_or_against.downcase
      this proposal
  - else
    = form_tag(vote_for_path(:id => proposal.id, :return_to => request.url)) do
      = submit_tag "Support"
    = form_tag(vote_against_path(:id => proposal.id, :return_to => request.url)) do
      = submit_tag "Oppose"